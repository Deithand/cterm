# cterm configuration file
# Copy this file to ~/.cterm.conf and edit with your settings

# IMAP Settings (for receiving emails)
imap_server = imap.gmail.com
imap_port = 993
imap_use_ssl = yes
imap_username = your_email@gmail.com
imap_password = your_password_or_app_password

# SMTP Settings (for sending emails)
smtp_server = smtp.gmail.com
smtp_port = 587
smtp_use_ssl = no
smtp_use_starttls = yes
smtp_username = your_email@gmail.com
smtp_password = your_password_or_app_password

# User Information
email_address = your_email@gmail.com
display_name = Your Name

# Notes:
# - For Gmail, you may need to use an App Password instead of your regular password
# - For other providers, adjust the server addresses and ports accordingly
# - Common IMAP SSL ports: 993 (SSL), 143 (STARTTLS)
# - Common SMTP ports: 465 (SSL), 587 (STARTTLS), 25 (no encryption)
